<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd"
    version="2.4">
	<error-page>
		<error-code>404</error-code>
		<location>/oasystem/404.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/oasystem/500.jsp</location>
	</error-page>
       <context-param>
                <param-name>easyn+ContextId</param-name>
                <param-value>fan</param-value> 
        </context-param>  
        <context-param>
                <param-name>f1jeeContextPath</param-name>
                <param-value>d:/webapps/fan/</param-value> 
        </context-param>		
		<context-param>
                <param-name>appPath</param-name>
                <param-value>/fan/</param-value> 
        </context-param>
		<context-param>
                <param-name>loginPath</param-name>
                <param-value>/fan/</param-value> 
        </context-param>
		<context-param>
                <param-name>mContextPath</param-name>
                <param-value>d:/webapps/o2o/m</param-value> 
        </context-param>				
		<context-param>
                <param-name>absoluteUploadPath</param-name>
                <param-value>D:/Apache22/htdocs/ysk/</param-value> 
        </context-param>
		<context-param>
                <param-name>uploadPath</param-name>
                <param-value>/ysk/</param-value> 
        </context-param>
		<context-param>
                <param-name>checkCode</param-name>
                <param-value>false</param-value> 
        </context-param>
